<Window x:Class="MIRAGE.popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIRAGE"
        KeyDown="Window_KeyDown" Loaded="Window_Loaded" Title="popup" Width="1184" Height="666"
        AllowsTransparency="true" Background="Transparent" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="false"
        ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStyle="None">
  <FrameworkElement.Triggers>
    <EventTrigger RoutedEvent="Window.Loaded">
      <BeginStoryboard>
        <Storyboard>
          <DoubleAnimation Duration="00:00:00.35" Storyboard.TargetProperty="Opacity" From="0" To="1"/>
        </Storyboard>
      </BeginStoryboard>
    </EventTrigger>
  </FrameworkElement.Triggers>
  <Grid Width="1184" Height="666">
    <Panel.Background>
      <ImageBrush ImageSource="Resources/popup_bg.png"/>
    </Panel.Background>
    <Image x:Name="ImgClose" Source="/Resources/pop_text1.png" Stretch="None" HorizontalAlignment="Center"
           VerticalAlignment="Center" Margin="0,-75,0,0"/>
    <Label x:Name="label_check_string" Content="" FontSize="19" HorizontalAlignment="Center"
           VerticalAlignment="Center" Foreground="#FF3C4146" Margin="0,-90,0,0"/>
    <Image MouseLeftButtonUp="BtnCancel_MouseLeftButtonUp" MouseEnter="BtnCancel_MouseEnter"
           MouseLeave="BtnCancel_MouseLeave" MouseLeftButtonDown="BtnCancel_MouseLeftButtonDown"
           x:Name="BtnCancel" Visibility="Hidden" Width="175" Height="42" HorizontalAlignment="Center"
           VerticalAlignment="Center" Margin="-97,98,89,37">
      <FrameworkElement.Style>
        <Style TargetType="{x:Type Image}">
          <Setter Property="Image.Source" Value="/Resources/BNT_tray_off.png"/>
        </Style>
      </FrameworkElement.Style>
    </Image>
    <Image MouseLeftButtonUp="BtnClose_MouseLeftButtonUp" MouseEnter="BtnClose_MouseEnter"
           MouseLeave="BtnClose_MouseLeave" MouseLeftButtonDown="BtnClose_MouseLeftButtonDown"
           x:Name="BtnClose" Visibility="Hidden" Width="175" Height="42" HorizontalAlignment="Center"
           VerticalAlignment="Center" Margin="273,98,89,37">
      <FrameworkElement.Style>
        <Style TargetType="{x:Type Image}">
          <Setter Property="Image.Source" Value="/Resources/BNT_close_off.png"/>
        </Style>
      </FrameworkElement.Style>
    </Image>
    <Image MouseLeftButtonUp="BtnCheck_MouseLeftButtonUp" MouseEnter="BtnCheck_MouseEnter"
           MouseLeave="BtnCheck_MouseLeave" MouseLeftButtonDown="BtnCheck_MouseLeftButtonDown"
           x:Name="Btncheck" Visibility="Visible" Width="175" Height="42" HorizontalAlignment="Center"
           VerticalAlignment="Center" Margin="0,90,0,0">
      <FrameworkElement.Style>
        <Style TargetType="{x:Type Image}">
          <Setter Property="Image.Source" Value="/Resources/BNT_check_off.png"/>
        </Style>
      </FrameworkElement.Style>
    </Image>
  </Grid>
</Window>