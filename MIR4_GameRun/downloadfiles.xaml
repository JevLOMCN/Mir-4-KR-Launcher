<Window x:Class="MIRAGE.DownloadFiles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIRAGE"
        Loaded="Window_Loaded" Title="popup" Height="666" Width="1184" AllowsTransparency="true"
        Background="Transparent" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="false" ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStyle="None">
  <FrameworkElement.Triggers>
    <EventTrigger RoutedEvent="Window.Loaded">
      <BeginStoryboard>
        <Storyboard>
          <DoubleAnimation Duration="00:00:00.35" Storyboard.TargetProperty="Opacity" From="0" To="1"/>
        </Storyboard>
      </BeginStoryboard>
    </EventTrigger>
  </FrameworkElement.Triggers>
  <Grid Width="1184" Height="666">
    <Panel.Background>
      <ImageBrush ImageSource="Resources/popup_bg.png"/>
    </Panel.Background>
        <Label x:Name="label_title_string" Content="Downloading update files." FontSize="19"
           HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF3C4146" Margin="0,-110,0,0"/>
    <Label x:Name="label_check_string" Content="" FontSize="12" HorizontalAlignment="Center"
           VerticalAlignment="Center" Foreground="#FF3C4146" Margin="0,-20,0,0"/>
    <ProgressBar Name="pbStatus" Minimum="0" Maximum="100" Value="0" Height="42" Width="380"
                 HorizontalAlignment="Center" Margin="0,90,0,0"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,90,0,0"
           Text="{Binding ElementName=pbStatus, Path=Value, StringFormat='{}{0:0}%'}"/>
    </Grid>
</Window>