<Window x:Class="MIRAGE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIRAGE"
        xmlns:locals="clr-namespace:xamlSpinnersWPF"
        Loaded="Window_Loaded" KeyDown="Window_KeyDown" Title="미르4" Height="706" Width="1224"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="true" Background="Transparent">
  <FrameworkElement.Triggers>
    <EventTrigger RoutedEvent="Window.Loaded">
      <BeginStoryboard>
        <Storyboard>
          <DoubleAnimation Duration="00:00:00.7" Storyboard.TargetProperty="Opacity" From="0" To="1"/>
        </Storyboard>
      </BeginStoryboard>
    </EventTrigger>
  </FrameworkElement.Triggers>
  <FrameworkElement.Resources>
    <Style TargetType="{x:Type RadioButton}">
      <Setter Property="Control.Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type RadioButton}">
            <BulletDecorator Background="Transparent" Cursor="Hand">
              <BulletDecorator.Bullet>
                <Grid Height="18" Width="18">
                  <Border Name="RadioOuter" Background="#FFE3E3E3" BorderBrush="#FF686868" BorderThickness="1"
                          CornerRadius="50"/>
                  <Border Name="RadioMark" CornerRadius="50" Margin="3" Background="#FF48B094" Visibility="Hidden"/>
                </Grid>
              </BulletDecorator.Bullet>
            </BulletDecorator>
            <ControlTemplate.Triggers>
              <Trigger Property="ToggleButton.IsChecked" Value="true">
                <Setter TargetName="RadioMark" Property="UIElement.Visibility" Value="Visible"/>
                <Setter TargetName="RadioOuter" Property="Border.BorderBrush" Value="#FFADADAD"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </FrameworkElement.Resources>
  <Border>
    <UIElement.Effect>
      <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.8" Color="Black"/>
    </UIElement.Effect>
    <Grid x:Name="bgGrid" Margin="20">
      <Panel.Background>
        <ImageBrush x:Name="BasicBack" ImageSource="Resources/Loading_BG.jpg"/>
      </Panel.Background>
      <Border BorderThickness="0" BorderBrush="Black">
        <Grid>
          <Image Name="imageView" Stretch="Uniform"/>
          <Image MouseLeftButtonDown="headerDiv_MouseLeftButtonDown" x:Name="headerDiv" Width="1184" Height="35"
                 Margin="0,0,0,0" Source="/Resources/header.png" HorizontalAlignment="Center"
                 VerticalAlignment="Top"/>
          <Image x:Name="logoDiv" Width="66" Height="16" Margin="36,8,0,0" Source="/Resources/logo.png"
                 HorizontalAlignment="Left" VerticalAlignment="Top"/>
          <Image MouseLeftButtonUp="topDownDiv_MouseLeftButtonUp" MouseEnter="topDownDiv_MouseEnter"
                 MouseLeave="topDownDiv_MouseLeave" x:Name="topDownDiv" Width="14" Height="14"
                 HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,68,0">
            <FrameworkElement.Style>
              <Style TargetType="{x:Type Image}">
                <Setter Property="Image.Source" Value="/Resources/icon_scale_down.png"/>
                <Style.Triggers>
                  <Trigger Property="UIElement.IsMouseOver" Value="true">
                    <Setter Property="Image.Source" Value="/Resources/icon_scale_down_on.png"/>
                  </Trigger>
                </Style.Triggers>
              </Style>
            </FrameworkElement.Style>
          </Image>
          <Image x:Name="topMaxDiv" Width="14" Height="14" HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,12,42,0">
            <FrameworkElement.Style>
              <Style TargetType="{x:Type Image}">
                <Setter Property="Image.Source" Value="/Resources/icon_scale_up.png"/>
              </Style>
            </FrameworkElement.Style>
          </Image>
          <Image MouseLeftButtonUp="topCloseDiv_MouseLeftButtonUp" MouseEnter="topCloseDiv_MouseEnter"
                 MouseLeave="topCloseDiv_MouseLeave" x:Name="topCloseDiv" Width="14" Height="14"
                 HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,15,0">
            <FrameworkElement.Style>
              <Style TargetType="{x:Type Image}">
                <Setter Property="Image.Source" Value="/Resources/icon_close.png"/>
                <Style.Triggers>
                  <Trigger Property="UIElement.IsMouseOver" Value="true">
                    <Setter Property="Image.Source" Value="/Resources/icon_close_on.png"/>
                  </Trigger>
                </Style.Triggers>
              </Style>
            </FrameworkElement.Style>
          </Image>
          <Image MouseLeftButtonUp="GameControlDiv1_MouseLeftButtonUp" MouseEnter="GameControlDiv1_MouseEnter"
                 MouseLeave="GameControlDiv1_MouseLeave" MouseLeftButtonDown="GameControlDiv1_MouseLeftButtonDown"
                 x:Name="GameControlDiv1" Width="236" Height="70" HorizontalAlignment="Right"
                 VerticalAlignment="Bottom" Margin="0,0,70,105"/>
          <Image MouseLeftButtonUp="GameControlDiv_MouseLeftButtonUp" MouseEnter="GameControlDiv_MouseEnter"
                 MouseLeave="GameControlDiv_MouseLeave" MouseLeftButtonDown="GameControlDiv_MouseLeftButtonDown"
                 x:Name="GameControlDiv" Width="236" Height="70" HorizontalAlignment="Right"
                 VerticalAlignment="Bottom" Margin="0,0,70,25"/>
          <local:UCMainMenu x:Name="MainMenu1" MouseLeftButtonUp="MainMenu1_MouseLeftButtonUp" HorizontalAlignment="Left"
                            VerticalAlignment="Top" Margin="33,57,0,0" TitleImage="/Resources/nav_text1.png"
                            OnImage="/Resources/btn1_on.png" OffImage="/Resources/btn1_off.png"/>
          <local:UCMainMenu x:Name="MainMenu2" MouseLeftButtonUp="MainMenu2_MouseLeftButtonUp" HorizontalAlignment="Left"
                            VerticalAlignment="Top" Margin="33,94,0,0" TitleImage="/Resources/nav_text2.png"
                            OnImage="/Resources/btn2_on.png" OffImage="/Resources/btn2_off.png"/>
          <local:UCMainMenu x:Name="MainMenu3" MouseLeftButtonUp="MainMenu3_MouseLeftButtonUp" HorizontalAlignment="Left"
                            VerticalAlignment="Top" Margin="33,130,0,0" TitleImage="/Resources/nav_text3.png"
                            OnImage="/Resources/btn3_on.png" OffImage="/Resources/btn3_off.png"/>
          <local:UCMainMenu x:Name="MainMenu4" MouseLeftButtonUp="MainMenu4_MouseLeftButtonUp" HorizontalAlignment="Left"
                            VerticalAlignment="Top" Margin="33,165,0,0" TitleImage="/Resources/nav_text4.png"
                            OnImage="/Resources/btn4_on.png" OffImage="/Resources/btn4_off.png"/>
          <Image x:Name="dirTitle" Width="135" Height="18" Margin="0,60,80,0" Source="/Resources/dir_title.png"
                 HorizontalAlignment="Right" VerticalAlignment="Top"/>
          <RadioButton Checked="radioDir11_Checked" x:Name="radioDir11" Margin="0,87,198,0" HorizontalAlignment="Right"
                       VerticalAlignment="Top" GroupName="radioDir" Cursor="Hand" IsChecked="True"/>
          <Image MouseLeftButtonUp="dir11_MouseLeftButtonUp" x:Name="dir11" Width="68" Height="16"
                 Margin="0,90,120,0" Source="/Resources/dir_text1.png" HorizontalAlignment="Right"
                 VerticalAlignment="Top" Cursor="Hand"/>
          <RadioButton Checked="radioDir12_Checked" MouseEnter="dirbtn12_MouseEnter" MouseLeave="dirbtn12_MouseLeave"
                       x:Name="radioDir12" Margin="0,118,198,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                       GroupName="radioDir" Cursor="Hand"/>
          <Image MouseLeftButtonUp="dir12_MouseLeftButtonUp" MouseEnter="dirbtn12_MouseEnter"
                 MouseLeave="dirbtn12_MouseLeave" x:Name="dir12" Width="112" Height="16" Margin="0,120,75,0"
                 Source="/Resources/dir_text2.png" HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="Hand"/>
          <Image MouseEnter="dirbtn12_MouseEnter" MouseLeave="dirbtn12_MouseLeave" x:Name="dirbtn12" Width="38"
                 Height="16" Margin="0,120,75,0" Source="/Resources/dir_btn_text2.png" HorizontalAlignment="Right"
                 VerticalAlignment="Top" Cursor="Hand"/>
          <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="968,160,0,0">
            <StackPanel>
              <StackPanel Orientation="Horizontal">
                <Image Width="18" Height="14" Source="/Resources/resolution_icon.png"/>
                <Label Content="해상도 비율" FontSize="15" FontWeight="Bold" Margin="5,0"/>
              </StackPanel>
              <StackPanel Orientation="Horizontal">
                <RadioButton Checked="radioResN_Checked" x:Name="radioResN" GroupName="radioRes" Cursor="Hand"
                             VerticalAlignment="Center" IsChecked="True"/>
                <Label MouseLeftButtonUp="radioResN_Checked" Content="기본" FontSize="14" FontWeight="Bold" Margin="5,0"/>
              </StackPanel>
              <StackPanel Orientation="Horizontal">
                <RadioButton Checked="radioResW_Checked" x:Name="radioResW" GroupName="radioRes" Cursor="Hand"
                             VerticalAlignment="Center"/>
                <Label MouseLeftButtonUp="radioResW_Checked" Content="와이드" FontSize="14" FontWeight="Bold" Margin="5,0"/>
              </StackPanel>
            </StackPanel>
          </Grid>
          <Image x:Name="dir12Tip" Width="203" Height="103" Margin="0,140,15,0" Source="/Resources/dir_popup.png"
                 HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Hidden"/>
          <Image x:Name="MainTitleDiv" Width="497" Height="337" HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="140,100,0,0">
            <FrameworkElement.Style>
              <Style TargetType="{x:Type Image}">
                <Setter Property="Image.Source" Value="/Resources/title3_bg_text.png"/>
              </Style>
            </FrameworkElement.Style>
          </Image>
          <Image x:Name="NoticeDiv" Width="270" Height="176" HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,98,92,0" Visibility="Hidden">
            <FrameworkElement.Style>
              <Style TargetType="{x:Type Image}">
                <Setter Property="Image.Source" Value="/Resources/aside_bg1.png"/>
              </Style>
            </FrameworkElement.Style>
          </Image>
          <Label Name="NoticeTitle" Content="새소식" HorizontalAlignment="Left" Margin="1085,115,0,0"
                 VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308" Foreground="White" FontSize="22"
                 FontWeight="Bold" Visibility="Hidden"/>
          <Label PreviewMouseDown="btnNotice_PreviewMouseDown" Name="btnNotice" Content="+"
                 HorizontalAlignment="Right" Margin="0,103,110,0" VerticalAlignment="Top"
                 RenderTransformOrigin="-0.5,-0.308" Foreground="White" FontSize="36" FontWeight="Bold"
                 Cursor="Hand" Visibility="Hidden"/>
          <Label PreviewMouseDown="Notice1_PreviewMouseDown" Name="Notice1" Content="" HorizontalAlignment="Left"
                 Margin="1085,165,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308"
                 Foreground="White" FontSize="14" Cursor="Hand"/>
          <Label PreviewMouseDown="Notice2_PreviewMouseDown" Name="Notice2" Content="" HorizontalAlignment="Left"
                 Margin="1085,195,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308"
                 Foreground="White" FontSize="14" Cursor="Hand"/>
          <Label PreviewMouseDown="Notice3_PreviewMouseDown" Name="Notice3" Content="" HorizontalAlignment="Left"
                 Margin="1085,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308"
                 Foreground="White" FontSize="14" Cursor="Hand"/>
          <Label Content="v.13" HorizontalAlignment="Left" Margin="1145,635,0,0" VerticalAlignment="Top"/>
          <Image x:Name="EventDiv" Width="270" Height="176" HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,294,92,0" Visibility="Hidden">
            <FrameworkElement.Style>
              <Style TargetType="{x:Type Image}">
                <Setter Property="Image.Source" Value="/Resources/aside_bg2.png"/>
              </Style>
            </FrameworkElement.Style>
          </Image>
          <Label Name="EventTitle" Content="이벤트" HorizontalAlignment="Left" Margin="1085,310,0,0"
                 VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308" Foreground="White" FontSize="22"
                 FontWeight="Bold" Visibility="Hidden"/>
          <Label PreviewMouseDown="btnEvent_PreviewMouseDown" Name="btnEvent" Content="+"
                 HorizontalAlignment="Right" Margin="0,298,110,0" VerticalAlignment="Top"
                 RenderTransformOrigin="-0.5,-0.308" Foreground="White" FontSize="36" FontWeight="Bold"
                 Cursor="Hand" Visibility="Hidden"/>
          <Label PreviewMouseDown="Event1_PreviewMouseDown" Name="Event1" Content="" HorizontalAlignment="Left"
                 Margin="1085,360,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308"
                 Foreground="White" FontSize="14" Cursor="Hand"/>
          <Label PreviewMouseDown="Event2_PreviewMouseDown" Name="Event2" Content="" HorizontalAlignment="Left"
                 Margin="1085,390,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308"
                 Foreground="White" FontSize="14" Cursor="Hand"/>
          <Label PreviewMouseDown="Event3_PreviewMouseDown" Name="Event3" Content="" HorizontalAlignment="Left"
                 Margin="1085,420,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308"
                 Foreground="White" FontSize="14" Cursor="Hand"/>
          <Image MouseLeftButtonUp="FailDiv_MouseLeftButtonUp" x:Name="FailDiv" Visibility="Hidden" Width="210"
                 Height="50">
            <FrameworkElement.Style>
              <Style TargetType="{x:Type Image}">
                <Setter Property="Image.Source" Value="/Resources/BNT_FAIL.png"/>
              </Style>
            </FrameworkElement.Style>
          </Image>
          <locals:ucSpinnerDotCircle x:Name="loadSpinner" RenderTransformOrigin="0.5,0.5" Margin="0,-2,0,2">
            <UIElement.RenderTransform>
              <TransformGroup>
                <ScaleTransform ScaleX="3" ScaleY="3"/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
              </TransformGroup>
            </UIElement.RenderTransform>
          </locals:ucSpinnerDotCircle>
        </Grid>
      </Border>
    </Grid>
  </Border>
</Window>