<Window x:Class="MIRAGE.DownloadGameFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIRAGE"
        Loaded="Window_Loaded" Title="DownloadGameFile" Height="666" Width="1184" AllowsTransparency="true"
        Background="Transparent" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="false" ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStyle="None">
  <FrameworkElement.Triggers>
    <EventTrigger RoutedEvent="Window.Loaded">
      <BeginStoryboard>
        <Storyboard>
          <DoubleAnimation Duration="00:00:00.35" Storyboard.TargetProperty="Opacity" From="0" To="1"/>
        </Storyboard>
      </BeginStoryboard>
    </EventTrigger>
  </FrameworkElement.Triggers>
  <Grid Width="1184" Height="666">
    <Label Name="LaDispPer" Content="100" Width="84" HorizontalContentAlignment="Right" Margin="69,557,0,0"
           VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308" Foreground="#FF3c4145" FontSize="45"
           HorizontalAlignment="Left"/>
    <Label Name="LaDispPerUnit" Content="%" HorizontalAlignment="Left" Margin="144,583,0,0"
           VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308" Foreground="#FF3c4145" FontSize="20"/>
    <Label Name="LaDispPerTxt" Content="설치중..." HorizontalAlignment="Left" Margin="165,576,0,0"
           VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308" Foreground="#FF3c4145" FontSize="25"/>
    <Label Name="LaDownloadFile" Content="설치파일: 설치 중인 파일명" HorizontalAlignment="Left" Margin="350,571,0,0"
           VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308" Foreground="#FF3c4145" FontSize="14"/>
    <Label Name="LaDownloadLength" Content="( 00,000 / 00,000 )" HorizontalAlignment="Left"
           Margin="350,588,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.5,-0.308"
           Foreground="#FF3c4145" FontSize="14"/>
    <ProgressBar Name="ImgProgress" Value="0" Minimum="0" Maximum="100" Width="795" Height="9"
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,623,0,0" BorderBrush="Transparent">
      <Control.Template>
        <ControlTemplate>
          <Grid>
            <Image Name="PART_Track" Source="/Resources/progressbar_out.png" Stretch="Fill"/>
            <Image Name="PART_Indicator" Source="/Resources/progressbar_in.png" Stretch="Fill"
                   HorizontalAlignment="Left"/>
          </Grid>
        </ControlTemplate>
      </Control.Template>
    </ProgressBar>
  </Grid>
</Window>