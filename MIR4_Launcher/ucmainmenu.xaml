<UserControl x:Class="MIRAGE.UCMainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MIRAGE">
  <StackPanel MouseEnter="MenuDiv_MouseEnter" MouseLeave="MenuDiv_MouseLeave" x:Name="MenuDiv"
              Orientation="Horizontal" Cursor="Hand">
    <Image x:Name="ImgMenu" Width="22" Height="22" Source="/Resources/btn1_off.png" Cursor="Hand"/>
    <Image x:Name="ImgTitle" Width="170" Source="/Resources/nav_text1.png" Cursor="Hand" Stretch="None"
           HorizontalAlignment="Left" Margin="10,0,0,0"/>
  </StackPanel>
</UserControl>